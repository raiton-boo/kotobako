---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'パーティーや配信で使える面白いセリフ集', ogImage = '/kotobako/og-image.png' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullOgImage = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/kotobako/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:site_name" content="ことば箱" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;700&family=Zen+Maru+Gothic:wght@700&display=swap" rel="stylesheet">
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
    
    <!-- トースト通知コンテナ（左下に変更） -->
    <div id="toast-container" class="fixed bottom-8 left-8 z-50 flex flex-col gap-3">
    </div>
  </body>
</html>

<style is:global>
  .toast-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 24px;
    border-radius: 9999px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    color: white;
    font-weight: bold;
    transform: translateX(-400px);
    opacity: 0;
    transition: all 0.15s ease;
  }
  
  .toast-item.show {
    transform: translateX(0);
    opacity: 1;
  }
  
  .toast-item .toast-icon {
    font-size: 1.5rem;
  }
</style>